<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white text-black p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-4 text-center">Forgot Password</h1>

    <!-- Afficher un message de succÃ¨s ou d'erreur -->
    {{#if error}}
      <p class="text-red-500 text-sm mb-4">{{error}}</p>
    {{/if}}
    {{#if success}}
      <p class="text-green-500 text-sm mb-4">{{success}}</p>
    {{/if}}

    <form action="/forgot-password" method="POST">
      <div class="mb-4">
        <label for="email" class="block font-semibold">Your Email</label>
        <input type="email" id="email" name="email" required class="w-full p-2 border border-gray-300 rounded">
      </div>
      <button type="submit" class="bg-blue-500 text-white w-full py-2 rounded">Send Reset Link</button>
    </form>

    <div class="text-center mt-4 text-sm">
      <a href="/login" class="text-blue-500">Back to Login</a>
    </div>
  </div>
</div>
